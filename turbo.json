{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["JWT_SECRET", "NEXTAUTH_URL", "NEXTAUTH_SECRET", "GOOGLE_CLIENT_SECRET", "GOOGLE_CLIENT_ID", "DATABASE_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
